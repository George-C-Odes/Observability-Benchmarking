<?xml version="1.0" encoding="UTF-8"?>
<!-- src/main/resources/logback.xml -->
<configuration>

    <!-- Suppress Logback's internal status messages (the "|-INFO in ch.qos.logback..." lines) -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <!-- Standard console output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- OTel appender â€” feeds logs into the SDK's BatchLogRecordProcessor.
         Uses GlobalOpenTelemetry; buffers until the SDK is initialized. -->
    <appender name="OTEL" class="io.opentelemetry.instrumentation.logback.appender.v1_0.OpenTelemetryAppender">
        <captureExperimentalAttributes>true</captureExperimentalAttributes>
        <captureMdcAttributes>*</captureMdcAttributes>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="OTEL" />
    </root>

</configuration>